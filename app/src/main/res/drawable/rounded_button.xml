<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#77cdee" />
            <gradient android:angle="-90" android:startColor="#9cd9f3" android:endColor="#a7def5"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#77cdee" />
            <solid android:color="#9cd9f3"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#77cdee" />
            <gradient android:angle="-90" android:startColor="#a7def5" android:endColor="#9cd9f3" />
        </shape>
    </item>
</selector>