<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1ca9df" />
            <gradient android:angle="-90" android:startColor="#9cdbf3" android:endColor="#66c7ec"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1ca9df" />
            <solid android:color="#1ca9df"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1ca9df" />
            <gradient android:angle="-90" android:startColor="#66c7ec" android:endColor="#9cdbf3" />
        </shape>
    </item>
</selector>