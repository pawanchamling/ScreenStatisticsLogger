<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="np.com.pawanchamling.screenstatisticslogger.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.5"
        >

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            tools:text="@string/txt_last_screen_ON_at"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            />

        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:id="@+id/textView3"
                tools:text="@string/txt_last_screen_ON_at_timestamp"
                android:textAlignment="center"
            />

        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:id="@+id/textView4"
                tools:text="@string/txt_last_screen_OFF_for"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="18sp"
            />

        <TextView
                android:id="@+id/textView_txt_last_screen_off"
                android:text="@string/txt_last_screen_OFF_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/textView_last_screen_timestamp"
                android:layout_alignStart="@+id/textView_last_screen_timestamp"
            />

        <TextView
                android:id="@+id/textView_last_screen_timestamp"
                android:text="@string/txt_last_screen_OFF_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_below="@+id/textView_txt_last_screen_off"
                android:layout_alignRight="@+id/textView3"
                android:layout_alignEnd="@+id/textView3"
            />

        <TextView
                android:id="@+id/textView_time_between_screen_on_and_off"
                android:text="@string/txt_last_screen_OFF_for"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:textStyle="normal|bold"
                android:textColor="#1b9fd1"
                android:textAlignment="center"
                android:layout_below="@+id/textView_last_screen_timestamp"
                android:layout_centerHorizontal="true"
            />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_marginTop="5dp"
            tools:text="@string/txt_screen_is_ON_for"
            android:textAlignment="center" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            tools:text="@string/txt_screen_is_ON_for_timestamp"
            android:textColor="#1b9fd1"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.4"
        >





        <Button
                android:id="@+id/button_settings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="settingsActivity"
                android:text="@string/txt_settings"
                android:background="#66c7ec"
                android:layout_column="11"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
            />

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent">


        </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
