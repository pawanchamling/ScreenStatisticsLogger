<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="np.com.pawanchamling.screenstatisticslogger.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent">


                <Button
                    android:id="@+id/button_stop_recording"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:onClick="stopRecording"
                    android:text="@string/txt_stop_recording"
                    android:background="@android:color/holo_red_light"
                    android:layout_column="11"
                    android:layout_marginTop="43dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/button_start_recording"
                    android:layout_alignStart="@+id/button_start_recording" />

                <Button
                    android:id="@+id/button_start_recording"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:onClick="startRecording"
                    android:text="@string/txt_start_recording"
                    android:layout_column="11"
                    android:background="@android:color/holo_green_light"
                    android:layout_alignBaseline="@+id/button_stop_recording"
                    android:layout_alignBottom="@+id/button_stop_recording"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/textView_last_screen_timestamp"
                    android:text="@string/txt_last_screen_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="normal|bold"
                    android:textAlignment="center"
                    android:layout_below="@+id/textView_txt_last_screen_off"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/textView_txt_last_screen_off"
                    android:text="@string/txt_last_screen_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textView_time_between_screen_on_and_off"
                    android:text="@string/txt_time_between_screen_on_and_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="normal|bold"
                    android:textColor="#1b9fd1"
                    android:textAlignment="center"
                    android:layout_below="@+id/textView_last_screen_timestamp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp" />


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.43">


                <Button
                    android:id="@+id/button_settings"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:onClick="settingsActivity"
                    android:text="@string/txt_settings"
                    android:background="#66c7ec"
                    android:layout_column="11"
                    android:layout_marginTop="63dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
